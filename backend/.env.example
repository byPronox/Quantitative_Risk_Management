# Backend Environment Configuration Example
# Copy this file to .env and update with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Frontend Configuration - Kong Gateway
VITE_API_URL=https://your-kong-gateway-url.kongcloud.dev

# Backend Configuration
DATABASE_URL=postgresql://username:password@host:5432/database

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=quantitative_risk_management

# NVD API Configuration (Kong Gateway)
NVD_API_KEY=your_nvd_api_key_here
USE_KONG_NVD=true

# Kong Configuration
KONG_PROXY_URL=https://your-kong-gateway-url.kongcloud.dev
KONG_ADMIN_API=https://us.api.konghq.com/v2/control-planes/your-control-plane-id
KONG_CONTROL_PLANE_ID=your-control-plane-id

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=nvd_analysis_queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Microservices URLs
ML_SERVICE_URL=http://ml-prediction-service:8001
NVD_SERVICE_URL=http://nvd-service:8002
REPORT_SERVICE_URL=http://report-service:8003

# Logging
LOG_LEVEL=INFO

# Security (IMPORTANT: Change these in production!)
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to Git!

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Project URL (para frontend/REST API)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Anon Key (para frontend - respeta RLS)
SUPABASE_ANON_KEY=your_anon_key_here

# Service Role Key (para backend - BYPASS RLS, usar con cuidado)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Password
DATABASE_PASSWORD=your_database_password

# Database Configuration (Supabase Cloud - Transaction Pooler RECOMMENDED)
# Format: postgresql://postgres.PROJECT_REF:PASSWORD@REGION.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres

# ============================================
# Kong Gateway Configuration (Kong Konnect Cloud)
# ============================================
KONG_PROXY_URL=https://your-kong-cloud-url.kongcloud.dev
KONG_TOKEN=your_kong_token_here
KONG_ADMIN_API=https://us.api.konghq.com/v2/control-planes/YOUR_CONTROL_PLANE_ID
KONG_CONTROL_PLANE_ID=your_control_plane_id

# ============================================
# Frontend Configuration
# ============================================
# Use Kong Gateway URL for API calls
VITE_API_URL=https://your-kong-gateway-url.kongcloud.dev
VITE_BACKEND_URL=https://your-kong-gateway-url.kongcloud.dev

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=change_this_to_a_random_secret_key

# ============================================
# NVD API Configuration
# ============================================
NVD_API_KEY=your_nvd_api_key_here
USE_KONG_NVD=false

# ============================================
# RabbitMQ Configuration (Docker Local)
# ============================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_QUEUE=nvd_analysis_queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# ============================================
# Internal Service URLs (Docker Network)
# ============================================
BACKEND_URL=http://backend:8000
NVD_SERVICE_URL=http://nvd-service:8002
NMAP_SERVICE_URL=http://nmap-scanner-service:8004
ML_SERVICE_URL=http://ml-prediction-service:8001

# Production Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Kong Gateway Configuration (Konnect)
KONG_TOKEN=your_personal_access_token_here
KONG_PROXY_URL=https://your-kong-gateway-url.dev
KONG_ADMIN_API=https://us.api.konghq.com/v2/control-planes/your-control-plane-id
KONG_CONTROL_PLANE_ID=your-control-plane-id

# Frontend Configuration - Kong Gateway
VITE_API_URL=https://your-kong-gateway-url.dev

# Backend Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=your_database_name

# NVD API Configuration (Kong Gateway)
NVD_API_KEY=your_nvd_api_key_here
USE_KONG_NVD=true

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_QUEUE=nvd_analysis_queue
RABBITMQ_URL=amqp://username:password@host:port/

# Backend Service Configuration
BACKEND_URL=http://backend:8000

# Environment variables for Quantitative Risk Management System
# Copy this to .env and update with your actual values

# Kong Gateway Configuration (Konnect)
KONG_TOKEN=your_personal_access_token_here
KONG_PROXY_URL=https://your-kong-gateway-url.kongcloud.dev
KONG_ADMIN_API=https://us.api.konghq.com/v2/control-planes/your-control-plane-id
KONG_CONTROL_PLANE_ID=your-control-plane-id

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database

# MongoDB Configuration  
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=quantitative_risk_management

# NVD API Configuration (Kong Gateway will handle this)
NVD_API_KEY=your_nvd_api_key_here
USE_KONG_NVD=true

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_QUEUE=nvd_analysis_queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Backend Service Configuration
BACKEND_URL=http://backend:8000

# Frontend Configuration (Routes through Kong Gateway)
VITE_API_URL=https://your-kong-gateway-url.kongcloud.dev
